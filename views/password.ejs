<body>
  <%- include('header.ejs') %>
    <div class="sign">
        <div class="container">
          <h1>チェックシート</h1>
          <div class="panel">
            <h2>パスワード入力</h2>
            <% if (errors.length > 0) {%>
              <ul class = 'errors'>
                <% errors.forEach(error => {%>
                  <li><%= error %></li>
                  <% });%>
              </ul>

              <% } %>



            <form action="/password" method="post">
              <p>パスワード</p>
              <input type="password" name="password">
              <input type="submit" value="決定">
            </form>
          </div>
        </div>
      </div>

    
</body>
